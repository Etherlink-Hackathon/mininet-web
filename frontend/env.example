# Frontend Environment Configuration for mininet-web
# Copy this to .env and fill in your actual values

# Privy Configuration (for wallet authentication)
VITE_PRIVY_APP_ID=your_privy_app_id_here

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Smart Contract Addresses (Etherlink Testnet)
VITE_SMARTPAY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_SMARTPAY_AUTHORITY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Token Contract Addresses
VITE_USDT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_USDC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_WTZ_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
# Network Configuration
VITE_CHAIN_ID=128123
VITE_CHAIN_NAME=Etherlink Testnet
VITE_RPC_URL=https://node.ghostnet.etherlink.com

# Development Mode
VITE_DEV_MODE=true
VITE_ENABLE_MOCK_DATA=false

# WebSocket Configuration
VITE_ENABLE_REALTIME=true
VITE_WS_RECONNECT_INTERVAL=5000

# Logging
VITE_LOG_LEVEL=debug 