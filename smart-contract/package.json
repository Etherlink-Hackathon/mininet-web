{
  "name": "fastpay-smart-contracts",
  "version": "1.0.0",
  "description": "SmartPay smart contracts for offline payment processing on Etherlink",
  "main": "index.js",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint 'test/**/*.ts' 'scripts/**/*.ts' 'deploy/**/*.ts'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network etherlink_testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network etherlink_mainnet",
    "verify:testnet": "npx hardhat verify --network etherlink_testnet",
    "verify:mainnet": "npx hardhat verify --network etherlink_mainnet",
    "size": "npx hardhat size-contracts",
    "clean": "npx hardhat clean",
    "node": "npx hardhat node",
    "typechain": "npx hardhat typechain"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "smartpay",
    "etherlink",
    "tezos",
    "offline-payments",
    "blockchain",
    "hardhat",
    "typescript"
  ],
  "author": "Huy DO",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@types/minimatch": "^5.1.2",
    "chai": "^4.3.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mininet-web/smart-contract.git"
  },
  "bugs": {
    "url": "https://github.com/mininet-web/smart-contract/issues"
  },
  "homepage": "https://github.com/mininet-web/smart-contract#readme"
} 