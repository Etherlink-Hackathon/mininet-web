{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./typechain-types"],
    "baseUrl": "./",
    "paths": {
      "@contracts/*": ["./contracts/*"],
      "@test/*": ["./test/*"],
      "@scripts/*": ["./scripts/*"],
      "@typechain/*": ["./typechain-types/*"]
    }
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./typechain-types/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "coverage"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
} 