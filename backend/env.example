# Application Configuration
APP_NAME="Etherlink Offline Payment API"
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Smart Contract Addresses (optional - leave empty if contracts are not deployed)
SMARTPAY_CONTRACT_ADDRESS=
FASTPAY_AUTHORITY_CONTRACT_ADDRESS=
USDT_CONTRACT_ADDRESS=
USDC_CONTRACT_ADDRESS=

# Blockchain Connection
RPC_URL=https://node.ghostnet.etherlink.com
CHAIN_ID=128123
CHAIN_NAME=Etherlink Testnet

# Private Key for Backend Operations (if needed)
# WARNING: Use a dedicated service account, never production keys
BACKEND_PRIVATE_KEY=your-private-key

# Mesh Network Configuration
AUTHORITY_DISCOVERY_PORT=8080
AUTHORITY_TIMEOUT=10.0
MIN_QUORUM_SIZE=3
MAX_AUTHORITIES=10
NETWORK_SCAN_RANGE="192.168.1.142/8"
MESH_BRIDGE_URL="http://192.168.1.142:8080"
MESH_TIMEOUT=10.0

# WebSocket Configuration
WS_ENABLE=true
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Database Configuration (if using database)
DATABASE_URL="sqlite:///./etherlink_payments.db"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Transaction Configuration
SUPPORTED_TOKENS='["XTZ", "USDT", "USDC"]'
DEFAULT_TOKEN="USDT"
MAX_TRANSACTION_AMOUNT=10000000
MIN_TRANSACTION_AMOUNT=1
TRANSACTION_TIMEOUT=30.0

# Origin Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173"]'

# Map Configuration
DEFAULT_MAP_CENTER='[37.7749, -122.4194]'
DEFAULT_MAP_ZOOM=12
MAP_UPDATE_INTERVAL=5
AUTHORITY_MARKER_COLORS='{"online": "#22c55e", "offline": "#ef4444", "syncing": "#f59e0b", "unknown": "#6b7280"}'

# Rate Configuration
CACHE_TTL=300
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60


