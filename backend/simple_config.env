# Simplified Etherlink Offline Payment Backend Configuration
# This file contains only the essential settings for the simple mesh client
# Copy this to .env and modify as needed

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Etherlink Offline Payment API"
APP_VERSION="2.0.0-simple"
DEBUG=false

# ============================================================================
# SERVER SETTINGS  
# ============================================================================
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# ============================================================================
# BASIC FASTPAY AUTHORITY NETWORK CONFIGURATION
# ============================================================================
AUTHORITY_DISCOVERY_PORT=8080
AUTHORITY_TIMEOUT=10.0
MIN_QUORUM_SIZE=3
MAX_AUTHORITIES=10

# ============================================================================
# NETWORK SETTINGS
# ============================================================================
NETWORK_SCAN_RANGE="10.0.0.0/8"

# ============================================================================
# SIMPLIFIED MESH CONFIGURATION
# ============================================================================
MESH_BRIDGE_URL="http://10.0.0.254:8080"
MESH_TIMEOUT=10.0

# ============================================================================
# STABLECOIN CONFIGURATION
# ============================================================================
SUPPORTED_TOKENS='["USDT", "USDC"]'
DEFAULT_TOKEN="USDT"

# ============================================================================
# TRANSACTION SETTINGS
# ============================================================================
MAX_TRANSACTION_AMOUNT=10000000
MIN_TRANSACTION_AMOUNT=1
TRANSACTION_TIMEOUT=30.0

# ============================================================================
# WEBSOCKET SETTINGS
# ============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL="sqlite:///./etherlink_payments.db"

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS SETTINGS
# ============================================================================
ALLOWED_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173"]'

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ============================================================================
# MAP AND VISUALIZATION SETTINGS
# ============================================================================
DEFAULT_MAP_CENTER='[37.7749, -122.4194]'
DEFAULT_MAP_ZOOM=12
MAP_UPDATE_INTERVAL=5

# Authority visualization settings (JSON format)
AUTHORITY_MARKER_COLORS='{"online": "#22c55e", "offline": "#ef4444", "syncing": "#f59e0b", "unknown": "#6b7280"}'

# ============================================================================
# BASIC PERFORMANCE SETTINGS
# ============================================================================
CACHE_TTL=300
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# DEVELOPMENT OVERRIDES
# ============================================================================
# Uncomment these for development

# DEBUG=true
# LOG_LEVEL="DEBUG"
# MESH_BRIDGE_URL="http://localhost:8080"

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# Uncomment these for production

# DEBUG=false
# SECRET_KEY="generate-a-secure-random-key-for-production"
# WORKERS=4

# ============================================================================
# NOTES
# ============================================================================
#
# This simplified configuration removes all the complex settings from the
# enhanced version and focuses only on core functionality:
#
# - Basic mesh gateway communication
# - Simple HTTP requests to authorities
# - Essential security and CORS settings
# - Basic logging and visualization
#
# No circuit breakers, connection pooling, advanced caching, or complex
# retry logic - just the essentials for mesh network integration.
#
# ============================================================================ 